<form id="hostearHeladeraForm" action="/colaboraciones/heladera" method="POST" style="display:none;">
    <div class="row">
        <div class="form-group mb-3 col-12 text-center">
            <label for="nombreHeladera">Nombre de la Heladera</label>
            <input type="text" class="form-control" id="nombreHeladera" name="nombreHeladera" placeholder="Nombre de la heladera" required>
        </div>

        <div class="form-row">
            <div class="form-group mb-3 col-md-4">
                <label for="modeloHeladera">Modelo de la Heladera</label>
                <input list="modelosList" class="form-control" id="modeloHeladera" name="modeloHeladera" placeholder="Selecciona o escribe un modelo" required>
                <datalist id="modelosList">
                    {{#each modelos}}
                        <option value="{{this.nombre}}" data-tempmax="{{this.tempMaxAceptable}}" data-tempmin="{{this.tempMinAceptable}}">
                            {{this.nombre}} ({{this.tempMinAceptable}} °C - {{this.tempMaxAceptable}} °C)
                        </option>
                    {{/each}}
                </datalist>
            </div>

            <div class="form-group mb-3 col-md-4">
                <label for="tempMin">Temperatura Mínima Asignada</label>
                <input type="number" step="0.1" class="form-control" id="tempMin" name="tempMin" placeholder="Temperatura mínima (°C)" required>
            </div>

            <div class="form-group mb-3 col-md-4">
                <label for="tempMax">Temperatura Máxima Asignada</label>
                <input type="number" step="0.1" class="form-control" id="tempMax" name="tempMax" placeholder="Temperatura máxima (°C)" required>
            </div>
        </div>

        <div class="form-group mb-3 col-3">
            <label for="cantMaxViandas">Capacidad Máxima de Viandas</label>
            <input type="number" class="form-control" id="cantMaxViandas" name="cantMaxViandas" placeholder="Cantidad máxima de viandas" required>
        </div>

        <div class="form-group mb-3 col-12">
            <label for="ubicacion">Ubicación de la Heladera</label>
            <!-- Mapa Leaflet para selección de ubicación -->
            <div id="map" style="height: 400px; border: 1px solid #ccc; border-radius: 4px;"></div>
            <input type="hidden" id="lat" name="lat">
            <input type="hidden" id="lng" name="lng">
            <input type="hidden" id="direccion" name="direccion">
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Hostear Heladera</button>
</form>
