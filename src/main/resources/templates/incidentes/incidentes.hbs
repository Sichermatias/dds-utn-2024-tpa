{{#partial "links"}}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">
{{/partial}}
{{#partial "contenido"}}
<div class="row">
        <div class="col-md-12">
            <div class="form-container bg-white p-4 rounded shadow">
                <h1 class="text-center text-primary">Incidentes de la Heladera: {{heladera.nombre}}</h1>

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Fecha de Alta</th>
                        <th>Descripcion</th>
                        <th>Imagen</th>
                        <th>Estado</th>
                        <th>Fecha Resolucion</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each incidentes}}
                        <tr>
                            <td>{{this.tipoIncidente}}</td>
                            <td>{{this.fechaHoraAlta}}</td>
                            <td>{{this.descripcionIncidente}}</td>
                            <td><img src="{{this.fotoIncidente}}" style="height: 60px" alt="Incidente"></td>
                            <td>{{#if this.resuelto}}Resuelto{{else}}Pendiente{{/if}}</td>
                            <td>{{this.fechaHoraBaja}}</td>
                            <td><a class="btn btn-primary" href="visitas/{{this.heladeraIncidente.id}}" role="button">Ver Visitas</a></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>

                <div class="text-center mt-4">
                    <a href="/" class="btn btn-outline-primary">Volver al Inicio</a>
                </div>
            </div>
        </div>
    </div>
</main>
{{/partial}}
{{#partial "scripts"}}
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{{/partial}}
